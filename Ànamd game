<script>
  let balance = 100;
  let countdown = 30;
  let round = 1;
  let timerDisplay = document.getElementById("countdown");
  let balanceDisplay = document.getElementById("balance");
  let historyList = document.getElementById("historyList");
  let chosenBet = null;
  let betAmount = 10; // default bet

  // Toggle Deposit / Withdraw Sections
  function toggleDeposit() {
    let dep = document.getElementById("depositSection");
    dep.style.display = dep.style.display === "none" ? "block" : "none";
    document.getElementById("withdrawSection").style.display = "none";
  }
  function toggleWithdraw() {
    let wit = document.getElementById("withdrawSection");
    wit.style.display = wit.style.display === "none" ? "block" : "none";
    document.getElementById("depositSection").style.display = "none";
  }

  // Bet amount selection
  document.querySelectorAll(".bet-btn").forEach(btn => {
    btn.addEventListener("click", () => {
      document.querySelectorAll(".bet-btn").forEach(b => b.classList.remove("active"));
      btn.classList.add("active");
      betAmount = parseInt(btn.dataset.amt);
    });
  });

  // Timer
  setInterval(() => {
    if (countdown > 0) { countdown--; } 
    else {
      let result = Math.floor(Math.random() * 10);
      let outcome = "No Bet";
      let changeAmt = 0;

      if (chosenBet !== null) {
        if (chosenBet == result) {
          changeAmt = betAmount * 2;
          balance += changeAmt;
          outcome = `Win ✅ +${changeAmt}`;
        } else {
          changeAmt = -betAmount;
          balance += changeAmt;
          outcome = `Loss ❌ -${betAmount}`;
        }
        showFloatingAmount(changeAmt);
      }

      let now = new Date().toLocaleTimeString();
      let rec = document.createElement("div");
      rec.className = "record";
      rec.innerHTML = `Round #${round} | Time: ${now} | Result: ${result} | ${outcome}`;
      historyList.prepend(rec);

      balanceDisplay.innerText = balance;
      countdown = 30;
      round++;
      chosenBet = null;
    }
    timerDisplay.innerText = countdown;
  }, 1000);

  // Bet selection
  document.querySelectorAll(".num, .extra-btn").forEach(el => {
    el.addEventListener("click", () => {
      chosenBet = el.dataset.val;
      alert("Bet Selected: " + chosenBet + " | Amount: ₹" + betAmount);
    });
  });

  // Floating profit/loss animation
  function showFloatingAmount(amount) {
    let floatDiv = document.createElement("div");
    floatDiv.className = "floating-amount";
    floatDiv.innerText = (amount > 0 ? `+₹${amount}` : `-₹${Math.abs(amount)}`);
    document.body.appendChild(floatDiv);
    setTimeout(() => floatDiv.remove(), 1500);
  }

  // Deposit Function
  function processDeposit() {
    let upiId = document.getElementById("depositUpi").value;
    let amt = parseInt(document.getElementById("depositAmt").value);
    let msg = document.getElementById("depositMsg");

    if (!upiId || !amt) { alert("Please enter UPI ID and amount."); return; }
    if (amt < 100 || amt > 1000) { alert("Deposit must be between ₹100 and ₹1000."); return; }

    balance += amt;
    balanceDisplay.innerText = balance;
    msg.style.display = "block";
    showFloatingAmount(amt);

    let now = new Date().toLocaleTimeString();
    let rec = document.createElement("div");
    rec.className = "record";
    rec.innerHTML = `💰 Deposit | Time: ${now} | UPI: ${upiId} | Amount: ₹${amt} | ✅ Successful`;
    historyList.prepend(rec);

    document.getElementById("depositUpi").value = "";
    document.getElementById("depositAmt").value = "";
    setTimeout(() => { msg.style.display = "none"; }, 2000);
  }

  // Withdrawal Function
  function processWithdrawal() {
    let upiId = document.getElementById("upiId").value;
    let amt = parseInt(document.getElementById("withdrawAmt").value);
    let msg = document.getElementById("withdrawMsg");

    if (!upiId || !amt) { alert("Please enter UPI ID and amount."); return; }
    if (amt > balance) { alert("Insufficient Balance!"); return; }

    balance -= amt;
    balanceDisplay.innerText = balance;
    msg.style.display = "block";
    showFloatingAmount(-amt);

    let now = new Date().toLocaleTimeString();
    let rec = document.createElement("div");
    rec.className = "record";
    rec.innerHTML = `💸 Withdrawal | Time: ${now} | UPI: ${upiId} | Amount: ₹${amt} | ✅ Successful`;
    historyList.prepend(rec);

    document.getElementById("upiId").value = "";
    document.getElementById("withdrawAmt").value = "";
    setTimeout(() => { msg.style.display = "none"; }, 2000);
  }
</script>
</body>
</html>
