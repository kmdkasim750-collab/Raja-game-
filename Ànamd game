<body>
  <div class="container">
    <header>Anand Game Roll Color Prediction</header>

    <!-- Wallet -->
    <div class="wallet">
      <h2>Wallet Balance</h2>
      <div class="digits">
        <div class="digit red-bg">₹</div>
        <div class="digit white-bg" id="balance">100</div>
      </div>
      <button class="btn deposit" onclick="toggleDeposit()">Deposit</button>
      <button class="btn withdraw" onclick="toggleWithdraw()">Withdraw</button>
    </div>

    <!-- Deposit Section -->
    <div class="deposit-section" id="depositSection" style="display:none;">
      <h3>Deposit Funds</h3>
      <input type="text" id="depositUpi" placeholder="Enter your UPI ID (example@upi)" />
      <input type="number" id="depositAmt" placeholder="Enter amount (₹100 - ₹1,000)" min="100" max="1000" />
      <button onclick="processDeposit()">Deposit Now</button>
      <div class="success-msg" id="depositMsg">✅ Deposit Successful! Amount Added.</div>
    </div>

    <!-- Withdrawal Section -->
    <div class="withdraw-section" id="withdrawSection" style="display:none;">
      <h3>Withdraw Funds</h3>
      <input type="text" id="upiId" placeholder="Enter your UPI ID (example@upi)" />
      <input type="number" id="withdrawAmt" placeholder="Enter amount" />
      <button onclick="processWithdrawal()">Send Withdrawal</button>
      <div class="success-msg" id="withdrawMsg">✅ Withdrawal Successful! Amount Sent.</div>
    </div>

    <!-- Bet Amount Selector -->
    <div class="bet-amount">
      <h3>Select Bet Amount</h3>
      <div class="bet-options">
        <div class="bet-btn" data-amt="10">₹10</div>
        <div class="bet-btn" data-amt="20">₹20</div>
        <div class="bet-btn" data-amt="50">₹50</div>
        <div class="bet-btn" data-amt="100">₹100</div>
      </div>
    </div>

    <!-- Game -->
    <div class="game">
      <div class="timer">Time Remaining: <span id="countdown">30</span>s</div>
